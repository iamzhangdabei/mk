%h1 Listing users
.table_wrapper
  %table#instances.table.table-bordered.table-striped
    %thead
      %tr
        %th.multi_select_column
        %th id
        %th Name
        %th Email
        %th Enabled
        %th actions_column
    %tbody
      - @users.each do |user|
        %tr.status_up
          %td.multi_select_column
            %input{:name => "object_ids", :type => "checkbox", :value => "c9b500d6-1d6c-4e42-bef1-72e2c59252e0"}/
          %td=user[:id]
          %td=user[:name]
          %td=user[:email]
          %td=user[:enabled]
          %td.actions_column
            .btn-group
              =link_to 'Destroy', user_path(:id=>user[:id]), :confirm => 'Are you sure?', :method => :delete 
              
