%h1 Listing users
.table_wrapper
  %table#instances.table.table-bordered.table-striped
    %thead
      %tr
        %th id
        %th Name
        %th Email
        %th Enabled
        %th.actions_column Actions
    %tbody
      - @users.each do |user|
        %tr.status_up
          %td=user[:id]
          %td=user[:name]
          %td=user[:email]
          %td=user[:enabled]
          %td.actions_column
            .btn-group
              %a.ajax-modal.btn.btn-small{:href => ""} actions
              %a.btn.dropdown-toggle{"data-toggle" => "dropdown", :href => "#"}
                %span.caret
              %ul.dropdown-menu.row_actions.clearfix
                %li.clearfix
                  =link_to "edit",edit_user_path(:id=>user[:id]),:class=>"btn btn-small"
                %li.clearfix
                  =link_to "delete",user_path(:id=>user[:id]), :confirm => 'Are you sure?', :method => :delete,:class=>"btn btn-small"
=link_to "create new user",new_user_path             
