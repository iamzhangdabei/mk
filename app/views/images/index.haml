%h1 Listing images
.table_wrapper
  %table#instances.table.table-bordered.table-striped
    %thead
      %tr
        %th Name
        %th Status
        %th Public
        %th Container Format
        %th.actions_column Actions
    %tbody
      - @images.each do |image|
        %tr.status_up
          %td=link_to  image[:name],image_path(:id=>image[:id])
          %td= image[:status]
          %td= (image[:is_public] == true && "Yes")||"No"
          %td= image[:container_format]

