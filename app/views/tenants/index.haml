%h1 Listing tenants
.table_wrapper
  %table#instances.table.table-bordered.table-striped
    %thead
      %tr
        %th id
        %th Name
        %th Desciription
        %th Enabled
        %th.actions_column Actions
    %tbody
      - @tenants.each do |tenant|
        %tr.status_up
          %td= tenant[:id]
          %td=tenant[:name]
          %td=tenant[:description]
          %td=tenant[:enabled]
          %td.actions_column
            .btn-group
              %a.ajax-modal.btn.btn-small{:href => ""} actions
              %a.btn.dropdown-toggle{"data-toggle" => "dropdown", :href => "#"}
                %span.caret
              %ul.dropdown-menu.row_actions.clearfix
                %li.clearfix
                  =link_to "edit",edit_tenant_path(:id=>tenant[:id]),:class=>"btn btn-small"
                %li.clearfix
                  =link_to "delete",tenant_path(:id=>tenant[:id]), :confirm => 'Are you sure?', :method => :delete,:class=>"btn btn-small"
=link_to "new tenant",new_tenant_path