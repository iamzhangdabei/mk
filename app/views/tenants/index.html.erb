<h1>Listing tenants</h1>

<table>
  <tr>
    <th>id</th>
    <th>Name</th>
    <th>Desciription</th>
    <th>Enabled</th>
  </tr>

<% @tenants.each do |tenant| %>
  <tr>
    <td><%= link_to  tenant[:id] ,tenant_path(:id=>tenant[:id])%></td>
    <td><%= tenant[:name] %></td>
    <td><%=  tenant[:description] %></td>
    <td><%=  tenant[:enabled] %></td>
    <td><%= link_to 'Destroy', tenant_path(:id=>tenant[:id]), :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

